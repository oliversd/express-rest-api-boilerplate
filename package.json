{
  "name": "api-boilerplate",
  "version": "0.0.2",
  "description": "A boilerplate for Node, Express, ES6/7 API",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG='app, mongo, redis, route' nodemon src/index.js --exec babel-node",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register test --recursive --require babel-polyfill",
    "clean": "rm -rf dist",
    "build": "npm run lint && npm run clean && mkdir dist && cp package.json dist/. && cp yarn.lock dist/. && babel src -s -d dist",
    "serve": "npm run build && DEBUG=* node dist/index.js",
    "lint": "eslint src/**/*.js && eslint test/**/*.js && echo '> lint passed!!!'",
    "lint:watch": "esw -f simple-detail -w src/**/*.js test/**/*.js"
  },
  "keywords": [
    "api",
    "node",
    "express",
    "es6",
    "es7",
    "api"
  ],
  "author": "Olivers De Abreu <olivers@vensign.com> (http://vensign.com/)",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^3.17.0",
    "eslint-config-airbnb-base": "11.1.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-watch": "^3.0.1",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "cors": "^2.8.1",
    "debug": "^2.6.1",
    "express": "^4.15.2",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-validator": "^3.1.2",
    "helmet": "^3.5.0",
    "method-override": "^2.3.7",
    "mongoose": "4.10.8",
    "monq": "^0.3.7",
    "oauth2orize": "^1.10.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth2-client-password": "^0.1.2",
    "pino": "^4.7.1",
    "randomstring": "^1.1.5",
    "redis": "^2.8.0",
    "uuid": "^3.1.0"
  }
}
